// Ejercicio 8: Uso de $lookup 
use('universidad'); 

db.createCollection("alumnos");
//Realiza una agregaci√≥n donde se combinen los datos de alumnos y cursos usando $lookup.

db.alumnos.aggregate([
    {$lookup: {
        from: "alumnos",
        localField: "_id",
        foreignField: "cursos.curso",
        as: "alumnos_en_cursos"
    }}
])
